{
  "name": "@hq-cloud/worker-runtime-infra",
  "version": "0.1.0",
  "description": "AWS CDK infrastructure for HQ Worker Runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "diff": "cdk diff",
    "aws:deploy": "bash ../../scripts/aws/deploy.sh",
    "aws:teardown": "bash ../../scripts/aws/teardown.sh",
    "aws:audit": "bash ../../scripts/aws/audit.sh",
    "aws:spin-up": "bash ../../scripts/aws/spin-up.sh",
    "aws:spin-down": "bash ../../scripts/aws/spin-down.sh",
    "aws:build-push": "bash ../../scripts/aws/build-and-push.sh",
    "aws:setup-iam": "bash ../../scripts/aws/setup-iam.sh"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.173.2",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@aws-sdk/client-budgets": "^3.700.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.700.0",
    "@aws-sdk/client-ecr": "^3.700.0",
    "@aws-sdk/client-ecs": "^3.700.0",
    "@aws-sdk/client-resource-groups-tagging-api": "^3.700.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@types/node": "^20.11.0",
    "aws-cdk": "^2.173.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.173.2",
    "constructs": "^10.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "hq",
    "worker",
    "aws",
    "cdk",
    "ecs",
    "fargate"
  ],
  "author": "HQ Cloud Team",
  "license": "UNLICENSED"
}
